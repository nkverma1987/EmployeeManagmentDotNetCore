@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
    
}

<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.PhotoPath ?? "noimg.jpg");
        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a class="btn btn-primary m-1" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">View</a>
                <a class="btn btn-primary m-1" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>

